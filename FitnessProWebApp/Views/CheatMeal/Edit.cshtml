@using static FitnessProWebApp.Models.CheatMeal;
@model CheatMeal

@{
    ViewData["Title"] = "Edit";
}

<form method="post">
	<input asp-for="CheatMealId" hidden/>
	<input asp-for="CaloriesGained" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit CheatMeal</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="CheatMealName"></label>
			<input asp-for="CheatMealName" class="form-control" />
			<span asp-validation-for="CheatMealName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="CreatedDate"></label>
			<input asp-for="CreatedDate" class="form-control" textmode="DateTime" />
			<span asp-validation-for="CreatedDate" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Amount"></label>
			<input asp-for="Amount" class="form-control" />
			<span asp-validation-for="Amount" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Save Changes</button>
		<a asp-controller="CheatMeal" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

