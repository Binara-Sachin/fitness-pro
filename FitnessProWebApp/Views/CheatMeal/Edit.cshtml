@using static FitnessProWebApp.Models.CheatMeal;
@model CheatMeal

@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <fieldset>
        <input asp-for="CheatMealId" hidden />
        <div class="row pb-2">
            <h2 class="text-primary">Edit Cheat Meal</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="CheatMealName" class="form-label mt-4"></label>
            <select asp-for="CheatMealName" class="form-select">
                <option>Pizza</option>
                <option>Burger</option>
                <option>Chocolate</option>
                <option>Hot Dog</option>
                <option>Milkshake</option>
            </select>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="CreatedDate"></label>
            <input asp-for="CreatedDate" class="form-control" textmode="DateTime" />
            <span asp-validation-for="CreatedDate" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Edit</button>
        <a asp-controller="CheatMeal" asp-action="Index" class="btn btn-secondary">Back</a>
    </fieldset>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

