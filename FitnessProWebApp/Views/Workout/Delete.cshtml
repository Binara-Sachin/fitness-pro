@using static FitnessProWebApp.Models.Workout;
@model Workout

@{
    ViewData["Title"] = "Delete";
}

<form method="post">
	<input asp-for="WorkoutId" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Workout</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="WorkoutName"></label>
			<input asp-for="WorkoutName" class="form-control" disabled/>
			<span asp-validation-for="WorkoutName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="CreatedDate"></label>
			<input asp-for="CreatedDate" class="form-control" textmode="DateTime" disabled />
			<span asp-validation-for="CreatedDate" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="WorkoutDuration"></label>
			<input asp-for="WorkoutDuration" class="form-control" disabled />
			<span asp-validation-for="WorkoutDuration" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Workout" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

