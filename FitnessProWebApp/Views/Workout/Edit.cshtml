@using static FitnessProWebApp.Models.Workout;
@model Workout

@{
    ViewData["Title"] = "Edit";
}

<form method="post">
	<input asp-for="WorkoutId" hidden/>
	<input asp-for="CaloriesBurned" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Workout</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="WorkoutName"></label>
			<input asp-for="WorkoutName" class="form-control" />
			<span asp-validation-for="WorkoutName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="CreatedDate"></label>
			<input asp-for="CreatedDate" class="form-control" textmode="DateTime" />
			<span asp-validation-for="CreatedDate" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="WorkoutDuration"></label>
			<input asp-for="WorkoutDuration" class="form-control" />
			<span asp-validation-for="WorkoutDuration" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Save Changes</button>
		<a asp-controller="Workout" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

