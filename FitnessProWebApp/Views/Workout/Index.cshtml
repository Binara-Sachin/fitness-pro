@model IEnumerable<Workout>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Workout Records</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Workout" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Add Workout
			</a>
		</div>
	</div>
    <br /><br />

    <table class="table table-hover" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Created At</th>
            <th>Workout Type</th>
            <th>Workout Duration (min)</th>
            <th>Calories Burned</th>
            <th></th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="5%">@obj.WorkoutId</td>
                <td width="10%">@obj.CreatedDate</td>
                <td width="10%">@obj.WorkoutName</td>
                <td width="10%">@obj.WorkoutDuration</td>
                <td width="10%">@obj.CaloriesBurned</td>
                <td width="10%">
                    <div class="btn-group" role="group">
                            <a asp-controller="Workout" asp-action="Edit" asp-route-id="@obj.WorkoutId"
                            class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Workout" asp-action="Delete" asp-route-id="@obj.WorkoutId"
                            class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
			</tr>
        }
    </tbody>

</table>
</div>